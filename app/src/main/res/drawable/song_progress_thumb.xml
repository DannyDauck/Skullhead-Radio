<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="24dp" android:height="24dp">
        <shape android:shape="oval">
            <gradient android:startColor="@color/black"
                android:endColor="@color/smooth_gold"
                android:angle="45"/>
        </shape>
    </item>
    <item
        android:width="21dp"
        android:height="21dp"
        android:left="1.5dp"
        android:top="1.5dp">
        <shape android:shape="oval">
            <gradient android:startColor="#00FFFF"
                android:endColor="#0099FF"
                android:angle="-45"/>
        </shape>
    </item>
</layer-list>