<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="60dp"
        android:height="60dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#44111111"
                android:endColor="@color/smooth_gold"
                android:angle="45"/>
        </shape>
    </item>
    <item
        android:height="57dp"
        android:width="57dp"
        android:start="1.5dp"
        android:top="1.5dp">
        <shape android:shape="oval">
            <gradient android:startColor="#222222"
                android:centerColor="#333333"
                android:endColor="#444444"
                android:type="radial"
                android:centerX="50%"
                android:centerY="50%"
                android:gradientRadius="90%"/>
        </shape>

    </item>
</layer-list>