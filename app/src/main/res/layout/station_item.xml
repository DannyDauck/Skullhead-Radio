<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/station_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#88ffffff">
        <ImageView
            android:id="@+id/station_item_station_lable"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/radio"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/station_item_station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="station name"
                android:layout_marginEnd="88dp"
                android:lines="1"
                android:textSize="24dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/station_item_station_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="station location"
                android:textSize="18dp"
                android:lines="1"
                android:textStyle="bold"
                android:layout_marginEnd="88dp"/>
            <TextView
                android:id="@+id/station_item_station_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="station genres"
                android:lines="1"
                android:layout_marginEnd="88dp"
                android:textSize="16dp"
                android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/station_item_play_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/play"
        app:tint="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>